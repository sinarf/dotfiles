# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
charset = "utf-8"
trim_trailling_whitespace = true
insert_final_new_line = true

[pj]
indent_size = 2
switch_case_indent = 2

[*.sh]
indent_size = 2
switch_case_indent = 2

[Makefile]
indent_style = tab
