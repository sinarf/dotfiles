#
# list of my bash aliases. 
# 
if command -v exa > /dev/null; then
  alias ls=exa
fi
alias ll="ls -l"
alias la="ls -a"
alias grep="grep --color"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias chmod="chmod -v"

alias tm="tmux attach"

alias stow="stow -v2"
alias venv=". venv/bin/activate || echo 'Could not enable venv virtual environment'"

# calendar-cli
alias todo='calendar-cli todo'
alias kal='calendar-cli calendar'

# all vi belong to neovim
alias vi=nvim
alias vim=nvim

# Enable vi keybindings on remote ssh
alias ssh="ssh -o RemoteCommand='bash -o vi' -o RequestTTY=yes"
