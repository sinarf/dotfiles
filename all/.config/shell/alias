#
# list of my bash aliases. 
# 
if command -v exa > /dev/null; then
  alias ls=exa
fi
alias ll="ls -l"
alias la="ls -a"
alias grep="grep --color"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias chmod="chmod -v"

alias tm="tmux attach"

alias stow="stow -v2"

# calendar-cli
alias todo='calendar-cli todo'
alias kal='calendar-cli calendar'

# all vi belong to neovim
alias vi=nvim
alias vim=nvim

alias gbc='git branch --sort=-committerdate | fzf --header Checkout | xargs git checkout'

# Enable vi keybindings on remote ssh
alias ssh="ssh -o RemoteCommand='bash -o vi' -o RequestTTY=yes"
alias SSH='ssh_helper.sh'
alias pj='project_helper.sh'
alias ipython='ipython_helper.sh'
