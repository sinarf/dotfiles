#
# list of my bash aliases. 
# 
alias ls="ls --color"
alias ll="ls -l"
alias la="ls -a"
alias grep="grep --color"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias chmod="chmod -v"

alias tm="tmux attach"

# EDITOR
export VISUAL='nvim-qt'
export EDITOR='nvim'

# dotdrop 
alias dotdrop='/home/sinarf/.config/dotfiles/dotdrop.sh --cfg=/home/sinarf/.config/dotfiles/config.yaml'
